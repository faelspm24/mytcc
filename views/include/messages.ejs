<% if (errors && errors.length> 0) { %>
    <div class="alert alert-danger">
        <% errors.forEach(function(error) { %>
            <p>
                <%= error %>
            </p>
            <% }); %>
    </div>
    <% } %>

        <% if (success && success.length> 0) { %>
            <div class="alert alert-success">
                <% success.forEach(function(message) { %>
                    <p>
                        <%= message %>
                    </p>
                    <% }); %>
            </div>
            <% } %>