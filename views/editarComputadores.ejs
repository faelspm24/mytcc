<!DOCTYPE html>
<html>

<head>
    <title>Editar Computadores</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body class="bg-dark">
    <br>
    <div class="container">

        <h2 class="text-white"> Computadores</h2>
        <br>
        <table class="table table-striped table-dark table-bordered">
            <thead>
                <tr>
                    <th>ID do Computador</th>
                    <th>Status</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% if (Array.isArray(computadores)) { %>
                    <% computadores.forEach((item)=> { %>
                        <tr>
                            <td>
                                <%= item._id %>
                            </td>

                            <td>
                                <%= item.disponivel %>
                            </td>
                            <td>
                                <a href="/editar/computador/<%= item._id %>" class="btn btn-primary">Editar</a>
                                <a href="/excluir/computador<%= item._id %>" class="btn btn-danger">Excluir</a>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4">Nenhum computador encontrado.</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script